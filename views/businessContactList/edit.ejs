<%- include('../partials/header.ejs'); %>
   <%- include('../partials/main-nav.ejs'); %>
    <%- include('../partials/footer.ejs'); %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="contactnameTextField"
                    placeholder="Enter the Name"
                    name="contact_name" 
                    value="<%= contact.contact_name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="contactnoTextField">Contact No</label>
                    <input type="text" class="form-control"
                    id="contactnoTextField"
                    placeholder="Enter Contact No"
                    name="contact_no" 
                    value="<%= contact.contact_no %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Contact No</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter Email Address"
                    name="email" 
                    value="<%= contact.email %>"
                    required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


 <%- include('../partials/header.ejs'); %>
   <%- include('../partials/main-nav.ejs'); %>
    <%- include('../partials/footer.ejs'); %>

  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-8">
            <h1><%= title %></h1>
            <br>
            <table class= "table table-bordered table-striped table-hover">
            <!--Header Row-->
            <tr class="d-flex">
            <% if(typeof displayName == 'string' && displayName) { %>
            <th class="text-center col-3">Contact Name</th>
            <th class="text-center col-3">Contact No</th>
            <th class="text-center col-3">Email</th>
            <th class="text-center col-2"></th>
            <th class="text-center col-2"></th>
            <% } else { %>
            <th class="text-center col-3">Contact Name</th>
            <th class="text-center col-3">Contact No</th>
            <th class="text-center col-3">Email</th>
            <% } %>
            </tr>

            <!--Repeatable Template Row-->
            
        <% for (let count = 0; count < ContactList.length; count++) { %>
                <tr class="d-flex">
                  
                  <td class="text-center col-3">$<%= ContactList[count].contact_name %></td>
                  <td class="text-center col-3"><%=ContactList[count].contact_no %></td>
                  <td class="text-center col-3"><%= ContactList[count].email %></td>

                  <td class="text-center col-2">
                    <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit</a>

                  </td>

                  <td class="text-center col-2">
                    <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>
                  </td>
                </tr>
                <% } %>
           
            </table>
            </div>
            </div>
            </main>

  
